<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jhalloran.zoo">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:name=".ZooApplication"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".ui.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:label="@string/title_activity_zoo_manager"
        android:name=".ui.manager.ZooManagerActivity"
        android:parentActivityName=".ui.main.MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/create_animal"
        android:name=".ui.create.CreateAnimalActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_create_pen"
        android:name=".ui.create.CreatePenActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_animal_detail"
        android:name=".ui.detail.AnimalDetailActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_pen_detail"
        android:name=".ui.detail.PenDetailActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_create_zookeeper"
        android:name=".ui.create.CreateZookeeperActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_zookeeper_detail"
        android:name=".ui.detail.ZookeeperDetailActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:label="@string/title_activity_auto_allocator"
        android:name=".ui.allocator.AutoAllocatorActivity"
        android:parentActivityName=".ui.manager.ZooManagerActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>